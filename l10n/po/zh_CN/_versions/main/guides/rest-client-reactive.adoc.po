#. type: delimited block -
#: upstream/_versions/main/guides/rest-client-reactive.adoc:762
#, no-wrap
msgid ""
"import jakarta.ws.rs.GET;\n"
"import jakarta.ws.rs.Path;\n"
"import java.util.Set;\n"
"import java.util.concurrent.CompletionStage;\n"
msgstr ""

#. type: delimited block -
#: upstream/_versions/main/guides/rest-client-reactive.adoc:768
#: upstream/_versions/main/guides/rest-client-reactive.adoc:849
#, no-wrap
msgid ""
"    @RestClient\n"
"    ExtensionsService extensionsService;\n"
msgstr ""

#. type: delimited block -
